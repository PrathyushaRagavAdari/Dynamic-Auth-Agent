# models/decision_engine.py
def generate_dynamic_challenge(graph_context: str) -> dict:
    if "Kroger" in graph_context:
        return {
            "challenge_question": "You made a grocery purchase yesterday in Columbus, OH. What was the exact total amount?",
            "expected_answer": "$54.30",
            "compliance_status": "Passed NIST AAL2 check"
        }
    return {
        "challenge_question": "Please verify your recent transaction location.",
        "expected_answer": "Columbus, OH",
        "compliance_status": "Passed NIST AAL1 check"
    }
